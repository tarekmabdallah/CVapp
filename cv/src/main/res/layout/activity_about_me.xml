<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cv_name_tv"
        style="@style/about_text_style"
        android:textStyle="bold"
        android:layout_above="@id/cv_job_tv" />

    <TextView
        android:id="@+id/cv_job_tv"
        style="@style/about_text_style"
        android:layout_above="@id/icons_layout" />

    <LinearLayout
        android:id="@+id/icons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/mobile"
            style="@style/icons_style"
            android:layout_margin="@dimen/space8"
            android:contentDescription="@string/call_me_label"
            android:src="@drawable/ic_telephone"/>

        <ImageView
            android:id="@+id/email"
            style="@style/icons_style"
            android:layout_margin="@dimen/space8"
            android:contentDescription="@string/linked_in_label"
            android:src="@drawable/ic_email" />

        <ImageView
            android:id="@+id/linkedin"
            style="@style/icons_style"
            android:layout_margin="@dimen/space8"
            android:contentDescription="@string/send_email_label"
            android:src="@drawable/ic_linkedin" />

        <ImageView
            android:id="@+id/github"
            style="@style/icons_style"
            android:layout_margin="@dimen/space8"
            android:contentDescription="@string/github_label"
            android:src="@drawable/ic_github_logo" />

    </LinearLayout>

</RelativeLayout>